.g-welcome
  color: #fff
  background-color: #453e38
  height: 100vh
  background: url("../img/main/welcome-bg.jpg") center no-repeat #453e38
  background-size: cover

  &-display
    padding: 0 (20/16)rem
    text-align: center
    position: relative
    top: 50%
    transform: translateY(-50%)

    &__title
      font-size: (44/16)rem
      line-height: 1
      font-weight: bold
      margin-bottom: (20/16)rem

    &__desc
      line-height: 1
      font-size: (19/16)rem
      font-weight: 300
      font-style: normal
      margin-bottom: (50/16)rem

    &-details
      display: block
      color: inherit
      text-decoration: none
      font-size: 0
      width: (170/16)rem
      height: (45/16)rem
      line-height: (43/16)rem
      margin: 0 auto
      border: 2px solid #fff
      font-weight: bold
      transition: background-color .3s, color .3s

      &:hover
        background-color: #fff
        color: rgba(#221a15, .95)

      &__txt
        display: inline
        vertical-align: middle
        font-size: 1rem
        text-transform: uppercase

      &__icn
        display: inline-block
        vertical-align: middle
        margin-left: (5/16)rem
        width: (25/16)rem
        height: (25/16)rem
        fill: currentColor
        position: relative
        top: (2/16)rem
