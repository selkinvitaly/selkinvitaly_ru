.g-top-nav
  padding: 0 (30/16)rem
  position: fixed
  z-index: $z-top-nav
  top: 0
  left: 0
  width: 100%
  height: (50/16)rem
  color: #fff
  transition: color .3s 0s, background-color .3s 0s

  clearfix()

  &_negative
    color: #333
    background-color: #fff
    box-shadow: 0 -1px 8px rgba(#000, .3)

  &-logo
    float: left
    font-size: (24/16)rem
    font-weight: 300
    padding-top: (8/16)rem

    &__lnk
      color: inherit
      text-decoration: none
      line-height: 1

.g-top-menu
  float: right
  list-style: none
  display: block
  font-size: 0
  padding-top: (14/16)rem

  &-itm
    display: inline-block
    vertical-align: middle
    font-size: 1rem
    margin-right: (30/16)rem
    font-weight: 300

    &:last-child
      margin-right: 0

    &__lnk
      color: inherit
      text-decoration: none

      &:hover
        text-decoration: underline
