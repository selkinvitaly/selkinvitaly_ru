.g-project-view(class="g-project-view_closed" data-project-view="knowledge")
  .g-project-view-win
    a.g-project-view-close(href="#close-view")
      svg.g-project-view-close__icn
        use(xlink:href=getSvgIcon("cross"))

      span.g-project-view-close__key Esc

    .g-project-view-gal
      .g-project-view-gal-images
        img(src="assets/img/content/projects/knowledge/1.png" alt="")
        img(src="assets/img/content/projects/knowledge/2.png" alt="")
        img(src="assets/img/content/projects/knowledge/3.png" alt="")
        img(src="assets/img/content/projects/knowledge/4.png" alt="")
        img(src="assets/img/content/projects/knowledge/5.png" alt="")

      div(class="blueimp-gallery blueimp-gallery-carousel blueimp-gallery-controls")
        div(class="slides")
        a(class="prev") ‹
        a(class="next") ›
        a(class="play-pause")

    .g-project-view-cont
      h2.g-project-view__title KnowLedge - News portal

      p.g-project-view__desc My role in the project is the full cycle development using LAMP stack.

      .g-project-view-tech
        h3.g-project-view-tech__title Technologies:

        ul.g-project-view-tech-lst
          li.g-project-view-tech-itm
            span.g-project-view-tech-itm__key Backend:
            p.g-project-view-tech-itm__val
              span PHP
              span MySQL

          li.g-project-view-tech-itm
            span.g-project-view-tech-itm__key Frontend:
            p.g-project-view-tech-itm__val
              span pre/post processors
              span templating engine
              span build tools

          li.g-project-view-tech-itm
            span.g-project-view-tech-itm__key Server app:
            p.g-project-view-tech-itm__val
              span Apache + Nginx

          li.g-project-view-tech-itm
            span.g-project-view-tech-itm__key VCS:
            p.g-project-view-tech-itm__val
              span git
